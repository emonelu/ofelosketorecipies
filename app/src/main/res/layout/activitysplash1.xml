<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- activity_splash.xml -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- ImageView for the app logo or splash image -->
        <ImageView
            android:id="@+id/imageViewSplash"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_centerInParent="true"
            android:src="@drawable/ketologo" /> <!-- Replace with your app logo drawable -->


        <!-- TextView for displaying the app name or slogan -->
        <TextView
            android:id="@+id/textViewAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewSplash"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:textSize="24sp"
            android:textColor="#540404"
            android:text="@string/app_name" /><!-- Replace with your app name or slogan -->


    </RelativeLayout>


</LinearLayout>